  { icon: 'üìß', label: 'olivier@schaer.io', href: 'mailto:olivier@schaer.io' },
  { icon: 'üìû', label: '+41 79 701 6765', href: 'tel:+41797016765' },
  { icon: 'üìç', label: 'Romont, Switzerland', href: '#' },
];
---

<section class="contact" id="contact">
  <div class="contact-content">
    <h2>Let's build something meaningful together</h2>
    <p>
      I'm always interested in hearing about new opportunities, challenging projects,
      and collaborations with teams who share my passion for creating products that matter.
    </p>
    <div class="cta-buttons">
      <a href="mailto:olivier@schaer.io" class="btn btn-primary">Send Email</a>
      <a href="https://linkedin.com/in/schaer" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">LinkedIn Profile</a>
    </div>
    <div class="contact-links">
      {contactLinks.map(link => (
        <a href={link.href} class="contact-link">
          <span>{link.icon}</span>
          <span>{link.label}</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 8rem 5%;
    background: white;
  }

  .contact-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .contact-content h2 {
    font-size: clamp(2rem, 4vw, 3.5rem);
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .contact-content p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 3rem;
    line-height: 1.7;
  }

  .contact-content .cta-buttons {
    justify-content: center;
  }

  .contact-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 3rem;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem 2rem;
    background: var(--bg);
    border-radius: 6px;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s ease;
  }

  .contact-link:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-3px);
  }
</style>
