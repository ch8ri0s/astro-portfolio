---
interface Props {
  icon: string;
  title: string;
  tags: string[];
}

const { icon, title, tags } = Astro.props;
---

<div class="skill-category">
  <div class="skill-icon">{icon}</div>
  <div class="skill-content">
    <h3>{title}</h3>
    <div class="skill-tags">
      {tags.map(tag => <span class="skill-tag">{tag}</span>)}
    </div>
  </div>
</div>

<style>
  .skill-category {
    padding: 1.5rem 2rem;
    background: white;
    border-radius: 8px;
    transition: all 0.3s ease;
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .skill-category:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
  }

  .skill-icon {
    width: 40px;
    height: 40px;
    background: var(--accent);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    flex-shrink: 0;
  }

  .skill-content {
    flex: 1;
  }

  .skill-content h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    letter-spacing: -0.01em;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    padding: 0.4rem 0.9rem;
    background: #f5f5f5;
    color: var(--text-secondary);
    border-radius: 20px;
    font-size: 0.85rem;
    transition: all 0.2s ease;
  }

  .skill-tag:hover {
    background: #e8e8e8;
    color: var(--text-primary);
  }
</style>
